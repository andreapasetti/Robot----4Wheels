
<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_robot">

    <link name='robot_footprint'></link>

    <joint name="robot_footprint_joint" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0" />
      <parent link="robot_footprint"/>
      <child link="chassis" />
    </joint>

   <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".5 .3 .05"/>
      </geometry>
    </visual>

    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".5 .3 .05"/>
      </geometry>
    </collision>
   </link>

   <link name='front_left_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.15 0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <visual name='front_left_visual'>
      <origin xyz="0.15 0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </visual>

    <collision name='front_left_collision'>
      <origin xyz="0.15 0.2 .0125" rpy=" 0 1.57050 1.5705"/> 
      <geometry>
        cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
   </link>

   <link name='front_right_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.15 -0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <visual name='front_right_visual'>
      <origin xyz="0.15 -0.2 .0125" rpy=" 0 1.5705 1.5705 "/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </visual>

    <collision name='front_right_collision'>
      <origin xyz="0.15 -0.2 .0125" rpy=" 0 1.5705 1.5705"/> 
      <geometry>
        cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
   </link>

   <link name='back_left_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="-0.15 0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <visual name='back_left_visual'>
      <origin xyz="-0.15 0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </visual>

    <collision name='back_left_collision'>
      <origin xyz="-0.15 0.2 .0125" rpy=" 0 1.5705 1.5705"/> 
      <geometry>
        cylinder radius="0.1" length="0.1"/>
      </geometry>
    </collision>
   </link>

   <link name='back_right_wheel'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="1.0"/>
      <origin xyz="-0.15 -0.2 .0125" rpy=" 1.5705 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <visual name='back_right_visual'>
      <origin xyz="-0.15 -0.2 .0125" rpy=" 0 1.5705 1.5705"/>
      <geometry>
        <cylinder radius="0.1" length="0.1"/>
      </geometry>
    </visual>

    <collision name='back_right_collision'>
      <origin xyz="-0.15 -0.2 .0125" rpy=" 0 1.5705 1.5705"/> 
      <geometry>
        cylinder radius="0.1" length="0.1"/>
  
      </geometry>
    </collision>
   </link>


  <joint name="joint_0" type="revolute">
    <origin xyz="0.15 0.2 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="front_left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_1" type="revolute">
    <origin xyz="0.15 -0.2 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="front_right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_2" type="revolute">
    <origin xyz="-0.15 0.2 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="back_right_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="joint_3" type="revolute">
    <origin xyz="-0.15 -0.2 0" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="front_left_wheel"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>

